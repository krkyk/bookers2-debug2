<%if users.exists?%>
  <%users.each do |user|%>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%=image_tag user.get_profile_image(40,40)%></td>
          <td><%=user.name%></td>
          <td>フォロー数:<%=user.followings.count%></td>
          <td>フォロワー数:<%=user.followers.count%></td>
          <td>
            <%=link_to"Show",user_path(user)%>
          </td>
        </tr>
      </tbody>
    </table>
  <%end%>
<%else%>
  <h6 class="mt-2">ユーザーはいません</h6>
<%end%>