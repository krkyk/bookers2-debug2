<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h3>投稿数の前日比・先週比</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>今日の投稿数</th>
            <th>前日の投稿数</th>
            <th>前日比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%=@today_book.count%></td>
            <td><%=@yesterday_book.count%></td>
            <%if @yesterday_book.count==0%>
              <td>前日の投稿はありません</td>
            <%else%>
              <td><%=@the_day_ratio.round%></td>
            <%end%>
            </td>
          </tr>
        </tbody>
      </table>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>今週の投稿数</th>
            <th>先週の投稿数</th>
            <th>先週比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%=@this_week_book.count%></td>
            <td><%=@last_week_book.count%></td>
            <%if @last_week_book==0%>
              <td>先週の投稿はありません</td>
            <%else%>
              <td><%#=@the_week_ratio.round%></td>
            <%end%>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
