<div class="container">
  <div class="row">
    <div class="col">
        <h2><%=@entry2.user.name%>さんとのチャット</h2>
        <div class="chat">
          <%if @messages.present?%>
          <table class="table table-borderless">
            <tbody>
              <%@messages.each do |m|%>
              <tr>
                <td>
                  <%=m.content%>
                </td>
              </tr>
              <%end%>
            </tbody>
          </table>
          <%else%>
            <h3>メッセージはまだありません</h3>
          <%end%>
        </div>
        <div class="chats col-md-2">
          <%=form_with model:@message,local:true do |f|%>
          <div class="form-group">
            <%=f.text_field :content,class: "form-control chat_text"%>
            <%=f.hidden_field :room_id, :value=>@room.id%>
          </div>
          <div class="form-group">
            <%f.submit%>
          </div>
          <%end%>
        </div>
    </div>
  </div>
</div>