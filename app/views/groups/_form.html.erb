<%=form_with model:group,lacal:true do |f|%>
<div class="form-group">
  <%=f.label:グループ名,class:"group_name"%>
  <%=f.text_field :name,class:"form-control group_name"%>
</div>
<div class="form-group">
  <%=f.label:紹介文,class:"group_introduction"%>
  <%=f.text_area :introduction,class:"form-control group_introduction"%>
</div>
<div class="form-group">
  <%=f.label:グループ画像,class:"group_image"%>
  <%=f.file_field :group_image,class: "form-control-file group_image", accept: 'image/*' %>
</div>
<div class="form-group">
  <%=f.submit"Create Group",class:"btn btn-sm btn-info mt-2"%>
</div>
<%end%>